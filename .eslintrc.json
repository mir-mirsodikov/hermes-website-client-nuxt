{
  "extends": [
    "plugin:vue/vue3-recommended"
  ],
  "rules": {
    // override/add rules settings here, such as:
    "vue/no-unused-vars": "error",
    "vue/multi-word-component-names": "off",
    "indent": ["error", 2],
    "semi": ["error", "always"],
    "no-trailing-spaces": ["error"],
    "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 1 }],
    "vue/max-len": ["error", {
      "code": 80,
      "template": 120
    }]
  }
}
